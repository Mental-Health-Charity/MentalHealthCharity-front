{
  "version": 2,
  "builds": [
    {
      "src": "src/next.config.js",
      "use": "@vercel/next"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "http://my-api.com/:1"
    },
    {
      "src": "/(.*)",
      "dest": "/"
    }
  ],
  "env": {
    "MY_API_KEY": "secret-key"
  }
}
